<Window x:Class="Barrage.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Barrage"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="400" ResizeMode="CanMinimize">
    <Grid RenderTransformOrigin="0.5,0.5" x:Name="grid">
        <Grid RenderTransformOrigin="0.5,0.5" x:Name="mainGrid">
            <Grid.Effect>
                <BlurEffect Radius="0"/>
            </Grid.Effect>
            <Image x:Name="Player" HorizontalAlignment="Center" Height="25" Margin="0" VerticalAlignment="Center" Width="25" Source="files/PlayerSprite.png" RenderTransformOrigin="0.5,0.5">
                <Image.RenderTransform>
                    <TransformGroup>
                        <ScaleTransform/>
                        <SkewTransform/>
                        <RotateTransform/>
                        <TranslateTransform Y="100"/>
                    </TransformGroup>
                </Image.RenderTransform>
            </Image>
            <CheckBox x:Name="checkBox" Content="useMouse" HorizontalAlignment="Left" Margin="0" VerticalAlignment="Top" Background="Transparent" BorderBrush="Transparent" FontSize="10" Opacity="0.5" Panel.ZIndex="100"/>
            <Label x:Name="projCount" Content="projectiles" Margin="0"  VerticalAlignment="Top" HorizontalAlignment="Right" Background="Transparent" BorderBrush="Transparent" Opacity="0.5" Panel.ZIndex="100" FontSize="10"/>
            <Image x:Name="TestProjectile" HorizontalAlignment="Center" VerticalAlignment="Center" Source="files/Projectile1.png" Width="15" Height="15" Visibility="Hidden"/>
        </Grid>
        <Label x:Name="PauseText" Margin="0,0,0,100" Content="" VerticalAlignment="Center" HorizontalAlignment="Center" Panel.ZIndex="100" FontSize="36" BorderBrush="Transparent" Background="Transparent"/>
    </Grid>
</Window>
